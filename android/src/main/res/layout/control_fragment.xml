<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <LinearLayout
        android:id="@+id/widget_speed"
        android:orientation="vertical"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/test">

        <SeekBar
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="105dp"
            android:layout_marginLeft="27dp"
            android:progress="50"
            android:max="100"
            android:id="@+id/speedWidget"
            android:thumb="@drawable/button_blue_rec"
            android:rotation="270"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/widget_direction"
        android:orientation="vertical"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="right"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/test">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="127dp"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="1dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginTop="60dp"
                android:id="@+id/l_button"
                android:background="@drawable/dir_widget"/>
            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/f_button"
                android:background="@drawable/dir_widget"/>
            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="60dp"
                android:id="@+id/r_button"
                android:background="@drawable/dir_widget"/>

        </LinearLayout>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="94dp"
            android:id="@+id/b_button"
            android:background="@drawable/dir_widget"/>


    </LinearLayout>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/power_btn"
        android:layout_alignTop="@+id/widget_speed"
        android:layout_centerHorizontal="true"
        android:background="@drawable/power_button" />

</RelativeLayout>
